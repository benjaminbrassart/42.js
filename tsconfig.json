{
	"compilerOptions": {
		"target": "es2016",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": [
		"./test",
		"./dist"
	]
}
